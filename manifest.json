{
  "name": "Bionic Speed Reader",
  "description": "An extension using the Bionic Reading API, to convert text to Bionic ReadingÂ®",
  "version": "0.2.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "./src/js/background.js"
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
  "action": {
    "default_popup": "./src/html/popup.html"
  },
  "icons": {
    "16": "./src/images/brc_logo16.png",
    "32": "./src/images/brc_logo32.png",
    "48": "./src/images/brc_logo48.png",
    "128": "./src/images/brc_logo128.png"
  },
  "options_page": "./src/html/options.html"
}
